# enable services that are not started automatically
OC_ADD_RUN_SERVICES={{ opencloud_environment_variables_add_run_services | join(',') }}
OC_URL={{ opencloud_environment_variables_url }}
OC_LOG_LEVEL={{ opencloud_environment_variables_log_level }}
OC_LOG_COLOR={{ opencloud_environment_variables_log_color }}
OC_LOG_PRETTY={{ opencloud_environment_variables_log_pretty }}
# do not use SSL between the reverse proxy and OpenCloud
PROXY_TLS={{ opencloud_environment_variables_proxy_tls }}
# INSECURE: needed if OpenCloud / reverse proxy is using self generated certificates
OC_INSECURE={{ opencloud_environment_variables_insecure }}
# basic auth (not recommended, but needed for eg. WebDav clients that do not support OpenID Connect)
PROXY_ENABLE_BASIC_AUTH={{ opencloud_environment_variables_proxy_enable_basic_auth }}
# demo users
IDM_CREATE_DEMO_USERS={{ opencloud_environment_variables_idm_create_demo_users }}
# admin password
IDM_ADMIN_PASSWORD={{ opencloud_environment_variables_idm_admin_password }}
# email server (if configured)
NOTIFICATIONS_SMTP_HOST={{ opencloud_environment_variables_notifications_smtp_host }}
NOTIFICATIONS_SMTP_PORT={{ opencloud_environment_variables_notifications_smtp_port }}
NOTIFICATIONS_SMTP_SENDER={{ opencloud_environment_variables_notifications_smtp_sender }}
NOTIFICATIONS_SMTP_USERNAME={{ opencloud_environment_variables_notifications_username }}
NOTIFICATIONS_SMTP_PASSWORD={{ opencloud_environment_variables_notifications_password }}
NOTIFICATIONS_SMTP_INSECURE={{ opencloud_environment_variables_notifications_insecure | to_json }}
NOTIFICATIONS_SMTP_AUTHENTICATION={{ opencloud_environment_variables_notifications_authentication }}
NOTIFICATIONS_SMTP_ENCRYPTION={{ opencloud_environment_variables_notifications_encryption }}
FRONTEND_ARCHIVER_MAX_SIZE={{ opencloud_environment_variables_frontend_archiver_max_size }}
PROXY_CSP_CONFIG_FILE_LOCATION={{ opencloud_environment_variables_proxy_csp_config_location }}
# enable to allow using the banned passwords list
OC_PASSWORD_POLICY_BANNED_PASSWORDS_LIST={{ opencloud_environment_variables_oc_password_policy_banned_passwords_list }}
# control the password enforcement and policy for public shares
OC_SHARING_PUBLIC_SHARE_MUST_HAVE_PASSWORD={{ opencloud_environment_variables_oc_sharing_public_share_must_have_password | to_json }}
OC_SHARING_PUBLIC_WRITEABLE_SHARE_MUST_HAVE_PASSWORD={{ opencloud_environment_variables_oc_sharing_public_writeable_share_must_have_password | to_json }}
OC_PASSWORD_POLICY_DISABLED={{ opencloud_environment_variables_oc_password_policy_disabled | to_json }}
OC_PASSWORD_POLICY_MIN_CHARACTERS={{ opencloud_environment_variables_oc_password_policy_min_characters }}
OC_PASSWORD_POLICY_MIN_LOWERCASE_CHARACTERS={{ opencloud_environment_variables_oc_password_policy_min_lowercase_characters }}
OC_PASSWORD_POLICY_MIN_UPPERCASE_CHARACTERS={{ opencloud_environment_variables_oc_password_policy_min_uppercase_characters }}
OC_PASSWORD_POLICY_MIN_DIGITS={{ opencloud_environment_variables_oc_password_policy_min_digits }}
OC_PASSWORD_POLICY_MIN_SPECIAL_CHARACTERS={{ opencloud_environment_variables_oc_password_policy_min_special_characters }}

{{ opencloud_environment_variables_additional_variables }}
