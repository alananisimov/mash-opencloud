[Unit]
Description=OpenCloud ({{ opencloud_identifier }})
{% for service in opencloud_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in opencloud_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ opencloud_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ opencloud_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ opencloud_identifier }} \
      --log-driver=none \
      --cap-drop=ALL \
      --cap-add=CHOWN \
      --cap-add=DAC_OVERRIDE \
      --cap-add=FOWNER \
      --cap-add=SETGID \
      --cap-add=SETUID \
      --network={{ opencloud_container_network }} \
      {% if opencloud_container_http_host_bind_port %}
      -p {{ opencloud_container_http_host_bind_port }}:{{ opencloud_container_http_port }} \
      {% endif %}
      --entrypoint=/bin/sh \
      --env-file={{ opencloud_base_path }}/env \
      --label-file={{ opencloud_base_path }}/labels \
      {% for volume in opencloud_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options is defined and volume.options else '' }} \
      {% endfor %}
      {% for arg in opencloud_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ opencloud_container_image_self_build_name if opencloud_container_image_self_build else opencloud_container_image }} \
      -c "opencloud init || true; opencloud server"

{% for network in opencloud_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ opencloud_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ opencloud_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ opencloud_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ opencloud_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ opencloud_identifier }}

[Install]
WantedBy=multi-user.target
